@using EventEase.Models
@inject UserSessionService UserSessionService

<div class="event-details-card">
    @if (Event != null)
    {
        <h2>@Event.Name</h2>
        <p><strong>Start:</strong> @Event.StartDate.ToString("MMMM dd, yyyy hh:mm tt")</p>
        <p><strong>End:</strong> @Event.EndDate.ToString("MMMM dd, yyyy hh:mm tt")</p>
        <p><strong>Location:</strong> @Event.Location</p>
        <p><strong>Created By:</strong> @Event.CreatedBy?.Name (@Event.CreatedBy?.Email)</p>
        <p><strong>Description:</strong> @Event.Description</p>             
    }   
    else
    {
        <p>Event details are not available.</p>
    }      
</div>

@code {
    [Parameter]
    public EventModel? Event { get; set; }
}

<style>
    .event-details-card {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 16px;
        background-color: #f9f9f9;
        margin-bottom: 16px;
    }

</style>